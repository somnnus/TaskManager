<Window x:Class="TaskManager.Views.User.TaskCardUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Задача"
        Width="600" Height="450"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding Title}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <TextBlock Grid.Row="6"
                   Grid.ColumnSpan="2"
                   Text="{Binding ErrorText}"
                   Foreground="DarkRed"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="Статус: "
                       VerticalAlignment="Center"/>

            <ComboBox Grid.Row="0"
                      Grid.Column="1"
                      ItemsSource="{Binding Statuses}"
                      SelectedItem="{Binding SelectedStatus}"
                      materialDesign:HintAssist.Hint="Статус задачи: "
                      Margin="0,0,0,0"/>

            <TextBlock Grid.Row="0"
                       Grid.Column="3"
                       Text="Исполнитель: "
                       VerticalAlignment="Center"/>
            <TextBlock Grid.Row="0"
                       Grid.Column="4"
                       Text="{Binding ExecutorLogin}"
                       VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Text="Дата создания: "
                       VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2"
                       Grid.Column="1"
                       Text="{Binding CreateDate}"
                       VerticalAlignment="Center"/>
        </Grid>

        <Border Grid.Row="4"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="6"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <DockPanel Grid.Row="6" LastChildFill="False">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Grid.Row="5"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        HorizontalAlignment="Right"
                        Foreground="ForestGreen"
                        Command="{Binding SaveCommand}">
                    <materialDesign:PackIcon Kind="ContentSave" Width="20" Height="20"/>
                </Button>

                <Button
					Grid.Row="5"
					Style="{StaticResource MaterialDesignFlatButton}"
					HorizontalAlignment="Right"
					Foreground="DarkRed"
					Command="{Binding CancelCommand}">
                    <materialDesign:PackIcon Kind="CloseCircle" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
