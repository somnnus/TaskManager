<UserControl x:Class="TaskManager.Views.Admin.HomePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <TabControl Margin="10" Style="{StaticResource MaterialDesignFilledUniformTabControl}">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="User"
                                                 Width="18"
                                                 Height="18"
                                                 Margin="0,0,6,0"/>
                        <TextBlock Text="Пользователи"/>
                    </StackPanel>
                </TabItem.Header>
                <ContentControl x:Name="UsersHost"/>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ListBox"
                                                 Width="18"
                                                 Height="18"
                                                 Margin="0,0,6,0"/>
                        <TextBlock Text="Задачи"/>
                    </StackPanel>
                </TabItem.Header>
                <ContentControl x:Name="TasksHost"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
