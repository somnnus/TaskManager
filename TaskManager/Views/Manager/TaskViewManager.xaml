<UserControl x:Class="TaskManager.Views.Manager.TaskViewManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderBrush="AliceBlue"
                BorderThickness="0,0,0,1"
                Padding="10">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Left">
                    <Button Style="{StaticResource MaterialDesignFlatMidBgButton}"
                            Command="{Binding LoadCommand}">
                        <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18" Margin="0,0,6,0"/>
                    </Button>

                    <Button Content="Создать задачу"
							Style="{StaticResource MaterialDesignFlatMidBgButton}"
							Margin="8,0,0,0"
							Command="{Binding CreateCommand}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <TextBlock Grid.Row="6"
           Grid.ColumnSpan="2"
           Text="{Binding ErrorText}"
           Foreground="DarkRed"/>

        <ScrollViewer Grid.Row="4" 
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Tasks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="300"
                                Margin="0,0,10,10"
                                Padding="10"
                                CornerRadius="8"
                                BorderBrush="#DDD"
                                BorderThickness="1">

                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftDoubleClick"
                                              Command="{Binding DataContext.CardCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                              CommandParameter="{Binding}" />
                            </Border.InputBindings>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap"/>

                                    <TextBlock Text="{Binding Description}"
                                               Margin="0,6,0,0"
                                               Opacity="0.85"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"
                                               MaxHeight="70"/>

                                    <Separator Margin="0,10,0,8"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Статус: "
                                                   Opacity="0.7"/>
                                        <TextBlock Text="{Binding Status}"
                                                   Margin="6,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,4,0,0">
                                        <TextBlock Text="Исполнитель: "
                                                   Opacity="0.7"/>
                                        <TextBlock Text="{Binding ExecutorLogin}"
                                                   Margin="6,0,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding CreateDate}"
                                               Margin="0,8,0,0"
                                               Opacity="0.6"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0,10,0,0">

                                    <Button Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Foreground="Gray">
                                        <materialDesign:PackIcon Kind="Pencil" Width="20" Height="20"/>
                                    </Button>

                                    <Button
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Foreground="DarkRed">
                                        <materialDesign:PackIcon Kind="Delete" Width="20" Height="20"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
